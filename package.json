{
  "name": "alphatools",
  "version": "1.0.0",
  "description": "An Interface to a NFT Bot",
  "main": "./out/main/index.js",
  "author": "github.com/albertalef",
  "homepage": "github.com/albertalef/alphatools",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/albertalef/alphatools"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "publish": "electron-forge publish",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "@reduxjs/toolkit": "^1.9.1",
    "@stitches/react": "^1.2.8",
    "axios": "^1.2.4",
    "electron-toolkit": "^1.0.24",
    "electron-updater": "^5.3.0",
    "ethers": "^5.7.2",
    "react-hook-form": "^7.43.1",
    "react-icons": "^4.7.1",
    "react-query": "^3.39.3",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.7.0",
    "web3": "^1.8.1"
  },
  "build": {
    "extraResources": [
      {
        "from": "./resources/",
        "to": "./",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@electron-forge/publisher-github": "^6.0.5",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@types/node": "^18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitejs/plugin-react": "^3.0.1",
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.17",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.0",
    "prettier": "^2.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-commonjs-externals": "^0.1.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
